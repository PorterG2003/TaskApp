<div class="hidden" data-controller="modal" data-modal-target="container" id="<%= id %>">
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-black/30 backdrop-blur-sm z-40"
       data-action="click->modal#close">
  </div>

  <!-- Modal -->
  <div class="fixed inset-4 sm:inset-auto sm:top-1/2 sm:left-1/2 sm:-translate-x-1/2 sm:-translate-y-1/2 glass-heavy bg-white/40 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/40 z-50 flex flex-col max-h-[calc(100vh-2rem)] sm:max-h-[90vh] sm:w-full sm:max-w-2xl">
    <!-- Header -->
    <div class="glass-heavy bg-white/50 px-6 py-4 border-b border-white/30 flex items-center justify-between">
      <div class="flex-1">
        <%= header %>
      </div>
      <button class="text-gray-500 hover:text-gray-700 p-2 -my-2 -mr-2 transition duration-200"
              data-action="modal#close">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Body -->
    <div class="p-6 overflow-y-auto">
      <%= body %>
    </div>

    <!-- Footer -->
    <% if footer? %>
      <div class="glass-heavy bg-white/50 px-6 py-4 border-t border-white/30">
        <%= footer %>
      </div>
    <% end %>
  </div>
</div>