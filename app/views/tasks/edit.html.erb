<div class="w-full max-w-2xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Task</h1>
    <p class="text-gray-600 mt-1">Update your task details</p>
  </div>

  <%= form_with model: @task, local: false, class: "space-y-6" do |form| %>
    <% if @task.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <div class="flex">
          <svg class="w-5 h-5 text-red-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <%= render 'form', task: @task, form: form %>

    <div class="flex justify-between items-center pt-6 border-t border-gray-200">
      <%= link_to tasks_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg transition duration-200" do %>
        Cancel
      <% end %>
      
      <%= form.submit "Update Task", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200" %>
    </div>
  <% end %>
</div>
