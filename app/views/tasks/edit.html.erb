<div class="w-full max-w-3xl mx-auto">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Edit Task</h1>
      <p class="text-gray-600 mt-1">Update your task details</p>
    </div>
    <%= link_to tasks_path, 
        class: "glass-heavy bg-white/30 hover:bg-white/40 text-gray-700 px-4 py-2 rounded-xl transition duration-200 backdrop-blur-xl border border-white/30 flex items-center" do %>
      <i class="fas fa-arrow-left mr-2"></i>
      <span>Back to Tasks</span>
    <% end %>
  </div>

  <%= form_with model: @task, local: false do |form| %>
    <!-- Error Messages -->
    <% if @task.errors.any? %>
      <div class="glass-heavy bg-red-500/20 backdrop-blur-xl rounded-xl border border-red-500/30 p-4 mb-6">
        <div class="flex items-start">
          <i class="fas fa-exclamation-circle text-red-500 mt-1"></i>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form -->
    <%= render 'form', task: @task, form: form %>

    <!-- Actions -->
    <div class="flex justify-end items-center gap-4 mt-6">
      <%= link_to tasks_path, 
          class: "glass-heavy bg-white/30 hover:bg-white/40 text-gray-700 px-6 py-2.5 rounded-xl transition duration-200 backdrop-blur-xl border border-white/30" do %>
        Cancel
      <% end %>
      
      <%= form.submit "Update Task", 
          class: "glass-heavy bg-blue-600/80 hover:bg-blue-700/80 text-white px-6 py-2.5 rounded-xl font-medium transition duration-200 backdrop-blur-xl border border-white/30" %>
    </div>
  <% end %>
</div>
