<div class="glass-heavy rounded-2xl shadow-2xl border border-white/40 p-8 backdrop-blur-xl bg-white/20">
  <div class="space-y-6">
    <!-- Title Field -->
    <div>
      <%= render Ui::Input.new(
        label: "Title",
        placeholder: "Enter task title...",
        value: form.object.title,
        name: "task[title]",
        id: "task_title",
        required: true
      ) %>
    </div>

    <!-- Description Field -->
    <div>
      <%= render Ui::Input.new(
        type: :textarea,
        label: "Description",
        placeholder: "Add task description (optional)...",
        value: form.object.description,
        name: "task[description]",
        id: "task_description",
        rows: 4
      ) %>
    </div>

    <!-- Priority and Due Date Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Priority Field -->
      <div>
        <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :priority, 
            options_for_select([
              ['Low Priority', 1],
              ['Medium Priority', 2],
              ['High Priority', 3],
              ['Urgent', 4],
              ['Critical', 5]
            ], task.priority || 2),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" } %>
      </div>

      <!-- Due Date Field -->
      <div>
        <%= form.label :due_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.date_field :due_date,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" %>
      </div>
    </div>

    <!-- Completion Status -->
    <% if task.persisted? %>
      <div class="flex items-center">
        <%= form.check_box :completed, 
            class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :completed, "Mark as completed", class: "ml-2 block text-sm text-gray-700" %>
      </div>
    <% end %>
  </div>
</div>