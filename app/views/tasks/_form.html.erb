<div class="glass-heavy bg-white/40 rounded-2xl shadow-2xl border border-white/40 p-8 backdrop-blur-xl">
  <div class="space-y-6">
    <!-- Title Field -->
    <div>
      <%= render Ui::Input.new(
        label: "Title",
        placeholder: "Enter task title...",
        value: form.object.title,
        name: "task[title]",
        id: "task_title",
        required: true,
        glass: true
      ) %>
    </div>

    <!-- Description Field -->
    <div>
      <%= render Ui::Input.new(
        type: :textarea,
        label: "Description",
        placeholder: "Add task description (optional)...",
        value: form.object.description,
        name: "task[description]",
        id: "task_description",
        rows: 8,
        glass: true,
        class: "min-h-[200px] resize-y"
      ) %>
    </div>

    <!-- Priority and Due Date Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Priority Field -->
      <div>
        <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="glass-medium bg-white/30 rounded-xl border border-white/30 backdrop-blur-xl">
          <%= form.select :priority, 
              options_for_select([
                ['Low Priority', 1],
                ['Medium Priority', 2],
                ['High Priority', 3],
                ['Urgent', 4],
                ['Critical', 5]
              ], task.priority || 2),
              {},
              { class: "w-full px-4 py-2.5 bg-transparent text-gray-700 appearance-none focus:outline-none" } %>
          <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none">
            <i class="fas fa-chevron-down text-gray-500"></i>
          </div>
        </div>
      </div>

      <!-- Due Date Field -->
      <div>
        <%= form.label :due_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="glass-medium bg-white/30 rounded-xl border border-white/30 backdrop-blur-xl">
          <%= form.date_field :due_date,
              class: "w-full px-4 py-2.5 bg-transparent text-gray-700 appearance-none focus:outline-none" %>
        </div>
      </div>
    </div>

    <!-- Completion Status -->
    <% if task.persisted? %>
      <div class="glass-medium bg-white/30 rounded-xl border border-white/30 backdrop-blur-xl p-4 flex items-center">
        <div class="relative flex items-center">
          <%= form.check_box :completed, 
              class: "peer sr-only",
              id: "task_completed" %>
          <label for="task_completed" class="relative w-14 h-8 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-7 after:w-7 after:transition-all peer-checked:bg-blue-600"></label>
        </div>
        <%= form.label :completed, "Mark as completed", class: "ml-3 text-sm text-gray-700" %>
      </div>
    <% end %>
  </div>
</div>