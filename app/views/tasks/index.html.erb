<div class="w-full">
  <!-- Header Section -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Tasks</h1>
  </div>



  <!-- Task Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Total Tasks -->
    <div class="glass-heavy bg-white/40 p-6 rounded-2xl backdrop-blur-xl border border-white/40 shadow-2xl">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="glass-heavy bg-blue-500/80 p-3 rounded-xl backdrop-blur-xl border border-white/30 mr-4">
            <i class="fas fa-tasks text-gray-900 text-xl"></i>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Total Tasks</p>
            <p class="text-2xl font-bold text-gray-900"><%= @tasks.count %></p>
          </div>
        </div>
        <div class="text-sm text-gray-500">
          <%= @tasks.count == 0 ? 'No tasks yet' : pluralize(@tasks.count, 'task') %>
        </div>
      </div>
    </div>
    
    <!-- Pending Tasks -->
    <div class="glass-heavy bg-white/40 p-6 rounded-2xl backdrop-blur-xl border border-white/40 shadow-2xl">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="glass-heavy bg-yellow-500/80 p-3 rounded-xl backdrop-blur-xl border border-white/30 mr-4">
            <i class="fas fa-clock text-gray-900 text-xl"></i>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Pending</p>
            <p class="text-2xl font-bold text-gray-900"><%= @pending_tasks.count %></p>
          </div>
        </div>
        <div class="text-sm text-gray-500">
          <%= number_to_percentage(@pending_tasks.count.to_f / @tasks.count * 100, precision: 0) unless @tasks.count.zero? %>
        </div>
      </div>
    </div>
    
    <!-- Completed Tasks -->
    <div class="glass-heavy bg-white/40 p-6 rounded-2xl backdrop-blur-xl border border-white/40 shadow-2xl">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="glass-heavy bg-green-500/80 p-3 rounded-xl backdrop-blur-xl border border-white/30 mr-4">
            <i class="fas fa-check-circle text-gray-900 text-xl"></i>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-600">Completed</p>
            <p class="text-2xl font-bold text-gray-900"><%= @completed_tasks.count %></p>
          </div>
        </div>
        <div class="text-sm text-gray-500">
          <%= number_to_percentage(@completed_tasks.count.to_f / @tasks.count * 100, precision: 0) unless @tasks.count.zero? %>
        </div>
      </div>
    </div>
  </div>

  <!-- Tasks Content -->
  <div class="space-y-8">
    <% if @tasks.any? %>
      <!-- Pending Tasks Section -->
      <% if @pending_tasks.any? %>
        <div class="glass-heavy bg-white/40 rounded-2xl shadow-2xl border border-white/40 overflow-hidden backdrop-blur-xl">
          <div class="glass-heavy bg-white/50 px-6 py-4 border-b border-white/30 flex items-center justify-between">
            <div class="flex items-center">
              <i class="fas fa-clock text-gray-900 mr-3"></i>
              <h3 class="text-xl font-semibold text-gray-900">Pending Tasks</h3>
            </div>
            <div class="text-sm text-gray-600">
              <%= pluralize(@pending_tasks.count, 'task') %>
            </div>
          </div>
          <div class="divide-y divide-white/10">
            <% @pending_tasks.each do |task| %>
              <%= render 'task_card', task: task %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Completed Tasks Section -->
      <% if @completed_tasks.any? %>
        <div class="glass-heavy bg-white/40 rounded-2xl shadow-2xl border border-white/40 overflow-hidden backdrop-blur-xl">
          <div class="glass-heavy bg-white/50 px-6 py-4 border-b border-white/30 flex items-center justify-between">
            <div class="flex items-center">
              <i class="fas fa-check-circle text-gray-900 mr-3"></i>
              <h3 class="text-xl font-semibold text-gray-900">Completed Tasks</h3>
            </div>
            <div class="text-sm text-gray-600">
              <%= pluralize(@completed_tasks.count, 'task') %>
            </div>
          </div>
          <div class="divide-y divide-white/10">
            <% @completed_tasks.each do |task| %>
              <%= render 'task_card', task: task %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="glass-heavy bg-white/40 rounded-3xl p-12 backdrop-blur-xl border border-white/40 shadow-2xl max-w-md mx-auto">
          <div class="glass-heavy bg-gray-100/50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 backdrop-blur-xl border border-white/30">
            <i class="fas fa-tasks text-gray-400 text-4xl"></i>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
