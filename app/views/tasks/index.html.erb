<div class="w-full">
  <!-- Header Section -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Tasks</h1>
  </div>



  <!-- Task Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Total Tasks -->
    <div class="glass-heavy bg-white/20 p-6 rounded-2xl backdrop-blur-xl border border-white/40 shadow-2xl">
      <div class="flex items-center">
        <div class="glass-heavy bg-blue-500/80 p-3 rounded-xl backdrop-blur-xl border border-white/30 mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Total Tasks</p>
          <p class="text-2xl font-bold text-gray-900"><%= @tasks.count %></p>
        </div>
      </div>
    </div>
    
    <!-- Pending Tasks -->
    <div class="glass-heavy bg-white/20 p-6 rounded-2xl backdrop-blur-xl border border-white/40 shadow-2xl">
      <div class="flex items-center">
        <div class="glass-heavy bg-yellow-500/80 p-3 rounded-xl backdrop-blur-xl border border-white/30 mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Pending</p>
          <p class="text-2xl font-bold text-gray-900"><%= @pending_tasks.count %></p>
        </div>
      </div>
    </div>
    
    <!-- Completed Tasks -->
    <div class="glass-heavy bg-white/20 p-6 rounded-2xl backdrop-blur-xl border border-white/40 shadow-2xl">
      <div class="flex items-center">
        <div class="glass-heavy bg-green-500/80 p-3 rounded-xl backdrop-blur-xl border border-white/30 mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Completed</p>
          <p class="text-2xl font-bold text-gray-900"><%= @completed_tasks.count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Tasks Content -->
  <div class="space-y-8">
    <% if @tasks.any? %>
      <!-- Pending Tasks Section -->
      <% if @pending_tasks.any? %>
        <div class="glass-heavy bg-white/20 rounded-2xl shadow-2xl border border-white/40 overflow-hidden backdrop-blur-xl">
          <div class="glass-medium bg-white/30 px-6 py-4 border-b border-white/30">
            <h3 class="text-xl font-semibold text-gray-900">Pending Tasks</h3>
          </div>
          <div class="divide-y divide-white/10">
            <% @pending_tasks.each do |task| %>
              <%= render 'task_card', task: task %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Completed Tasks Section -->
      <% if @completed_tasks.any? %>
        <div class="glass-heavy bg-white/20 rounded-2xl shadow-2xl border border-white/40 overflow-hidden backdrop-blur-xl">
          <div class="glass-medium bg-white/30 px-6 py-4 border-b border-white/30">
            <h3 class="text-xl font-semibold text-gray-900">Completed Tasks</h3>
          </div>
          <div class="divide-y divide-white/10">
            <% @completed_tasks.each do |task| %>
              <%= render 'task_card', task: task %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="glass-heavy bg-white/20 rounded-3xl p-12 backdrop-blur-xl border border-white/40 shadow-2xl max-w-md mx-auto">
          <div class="glass-heavy bg-gray-100/50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 backdrop-blur-xl border border-white/30">
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
            </svg>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
