<div class="min-h-screen flex items-center justify-center p-4">
  <div class="glass-heavy bg-white/20 rounded-3xl shadow-2xl border border-white/40 backdrop-blur-xl p-12 max-w-md w-full">
    <div class="text-center">
      <!-- App Logo/Icon -->
      <div class="glass-heavy bg-blue-600/80 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-8 backdrop-blur-xl border border-white/30 shadow-2xl">
                        <svg class="w-10 h-10 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
      </div>
      
      <!-- Welcome Text -->
      <h1 class="text-4xl font-bold text-gray-900 mb-3">TaskApp</h1>
      <p class="text-gray-600 mb-10 text-lg">Stay organized with seamless Google Calendar integration</p>
      
      <!-- Features List -->
      <div class="text-left mb-10 space-y-4">
        <div class="flex items-center">
          <div class="glass-heavy bg-green-500/80 w-6 h-6 rounded-full flex items-center justify-center mr-4 backdrop-blur-xl border border-white/30">
            <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-gray-700 font-medium">Sync tasks with Google Calendar</span>
        </div>
        <div class="flex items-center">
          <div class="glass-heavy bg-green-500/80 w-6 h-6 rounded-full flex items-center justify-center mr-4 backdrop-blur-xl border border-white/30">
            <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-gray-700 font-medium">Works offline as a PWA</span>
        </div>
        <div class="flex items-center">
          <div class="glass-heavy bg-green-500/80 w-6 h-6 rounded-full flex items-center justify-center mr-4 backdrop-blur-xl border border-white/30">
            <svg class="w-4 h-4 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="text-gray-700 font-medium">Beautiful, responsive design</span>
        </div>
      </div>
      
      <!-- Google Sign In Button -->
      <%= link_to "/auth/google_oauth2", class: "w-full glass-heavy bg-white/90 hover:bg-white/95 border border-white/50 rounded-2xl px-8 py-4 flex items-center justify-center transition duration-200 shadow-2xl backdrop-blur-xl" do %>
        <!-- Google Icon -->
        <svg class="w-6 h-6 mr-4" viewBox="0 0 24 24">
          <path fill="#4285f4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34a853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#fbbc05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#ea4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span class="text-gray-700 font-semibold text-lg">Continue with Google</span>
      <% end %>
      
      <p class="text-sm text-gray-500 mt-6">
        By signing in, you agree to sync your tasks with Google Calendar
      </p>
    </div>
  </div>
</div>
